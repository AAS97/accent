{{page-title
  text=(t 'components.project_comments_list.title')
  icon='assets/bubble.svg'
}}

{{#if model.loading}}
  {{skeleton-ui/progress-line}}
{{/if}}

{{#if showSkeleton}}
  {{skeleton-ui/project-comments-list}}
{{else}}
  {{project-comments-list
    project=model.project
    comments=model.comments.entries
  }}

  {{resource-pagination
    meta=model.comments.meta
    onSelectPage=(action 'selectPage')
  }}
{{/if}}
